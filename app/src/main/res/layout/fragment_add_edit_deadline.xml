<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.AddEditDeadlineActivityFragment"
    tools:showIn="@layout/activity_add_edit_deadline"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <pl.zayer.hmd.components.EditButtonIconHint
            android:id="@+id/date_eb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/fragment_add_edit_deadline_date_hint"
            app:buttonIcon="@drawable/add_edit_deadline_date"
            app:buttonText="May 7, 2016"/>

        <pl.zayer.hmd.components.EditButtonIconHint
            android:id="@+id/icon_eb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/fragment_add_edit_deadline_icon_hint"
            app:buttonIcon="@drawable/add_edit_deadline_icon_default"
            app:buttonText="Pets"/>

        <pl.zayer.hmd.components.EditButtonIconHint
            android:id="@+id/color_eb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/fragment_add_edit_deadline_color_hint"
            app:buttonIcon="@drawable/add_edit_deadline_color"
            app:buttonText="Black"
            app:buttonIconTint="@color/colorPrimary"/>

    </LinearLayout>

</ScrollView>